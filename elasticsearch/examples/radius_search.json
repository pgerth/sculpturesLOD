# radius query for geo_point geometries
GET /object/_search
{
  "query":{
    "bool": {
      "must": {
        "match_all": {}
      },
      "filter": {
        "geo_shape": {
          "geometry": {
            "shape": {
              "type": "circle",
              "radius": "500km",
              "coordinates" : [8.575333, 36.49073]
            },
            "relation": "within"
          }
        }
      }
    }
  }
}

# radius query for geo_point geometries
GET object/_search
{
  "query": {
    "bool" : {
      "must" : {
        "match_all" : {}
      },
      "filter" : {
        "geo_distance" : {
          "distance" : "500km",
          "location" : {
            "lat" : 36.49073,
            "lon" : 8.575333
          }
        }
      }
    }
  }
}
